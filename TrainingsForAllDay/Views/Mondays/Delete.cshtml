@model TrainingsForAllDay.Models.Monday

@{
    ViewBag.Title = "Видалити вправу з програми тренувань на понеділок";
}

<h2>Видалити</h2>

<h3>Ви впевнені, що хочете виконати видалення?</h3>
<div>
    <h4>Вправа із програми тренувань на понеділок</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date.DateId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date.DateId)
        </dd>

        <dt>
            Назва вправи
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameOfTraining)
        </dd>

        <dt>
            Додаткова вага(у кг.)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WeightOfTraining)
        </dd>

        <dt>
            К-ть підходів
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Approach)
        </dd>

        <dt>
            1-й підхід(разів)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Appr1)
        </dd>

        <dt>
            2-й підхід(разів)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Appr2)
        </dd>

        <dt>
            3-й підхід(разів)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Appr3)
        </dd>

        <dt>
            4-й підхід(разів)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Appr4)
        </dd>

        <dt>
            5-й підхід(разів)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Appr5)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            @Html.ActionLink("Повернутися до списку", "Index")
        </div>
    }
</div>
