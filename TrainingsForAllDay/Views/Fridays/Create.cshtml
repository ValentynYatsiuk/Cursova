            @Html.DropDownList("DateDateId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DateDateId, "Прив'яжіть вправу по ID до дати тренування", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Створити" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Повернутися до списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
